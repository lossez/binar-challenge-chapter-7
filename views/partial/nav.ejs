<script>
  const logout = document.querySelector("#logout");
  logout.addEventListener("click", function (e) {
    e.preventDefault();
    fetch("/api/auth/logout", {
      method: "POST",
    })
      .then((res) => {
        if (res.ok) {
          localStorage.removeItem("token");
          window.location.href = "/login";
        }
      })
      .catch((err) => {
        console.log(err);
      });
  });
</script>
